{
  "name": "sih",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && npx prisma generate &&  cd ../..",
    "web:start": "cd apps/web && bun run start",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pipeline": {
    "...": "..."
  },
  "globalEnv": [
    "DATABASE_URL",
    "JWT_SECRET"
  ]
}